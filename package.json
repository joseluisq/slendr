{
  "name": "slendr",
  "version": "1.1.2",
  "description": "Lightweight and responsive slider for modern browsers.",
  "repository": "joseluisq/slendr",
  "author": {
    "name": "JosÃ© Luis Quintana",
    "url": "http://git.io/joseluisq"
  },
  "license": "MIT",
  "keywords": [
    "slider",
    "slideshow",
    "html5",
    "lightweight",
    "reponsive",
    "css3",
    "translate3d",
    "commonjs",
    "hardware accelerated"
  ],
  "engines": {
    "node": ">= 4.2"
  },
  "main": "./slendr.js",
  "dependencies": {
    "emitus": "^1.1.4"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.4.0",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-1": "^6.22.0",
    "babel-register": "^6.23.0",
    "clean-css-cli": "^4.0.8",
    "coveralls": "^2.12.0",
    "cross-env": "^3.2.3",
    "css-loader": "^0.27.0",
    "eslint": "^3.17.0",
    "eslint-config-standard": "^7.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "gzip-size": "^3.0.0",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "in-publish": "^2.0.0",
    "jsdom": "^9.11.0",
    "node-sass": "4.5.0",
    "nyc": "^10.1.2",
    "pretty-bytes": "^4.0.2",
    "readline-sync": "^1.4.6",
    "sass-loader": "^6.0.2",
    "style-loader": "^0.15.0",
    "tape": "^4.6.3",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  },
  "scripts": {
    "start": "webpack-dev-server -d --content-base ./ --hot --colors --inline src/app.js --config webpack.server.config.js",
    "build:css": "node-sass scss/slendr.scss dist/slendr.css && cleancss dist/slendr.css -do dist/slendr.min.css",
    "build:lib": "babel ./src -d . --ignore app.js",
    "build:umd": "webpack src/slendr.js dist/slendr.js",
    "build:min": "webpack -p src/slendr.js dist/slendr.min.js",
    "build": "node ./scripts/build.js",
    "prepublish": "node ./scripts/build.js",
    "release": "node ./scripts/release.js",
    "lint": "eslint src",
    "test": "npm run lint && cross-env BABEL_ENV=test nyc npm run test:tape",
    "test:tape": "tape -r babel-register ./__tests__/*.test.js",
    "coverage": "coveralls < ./coverage/lcov.info"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-1"
    ],
    "plugins": [
      "dev-expression",
      "transform-object-assign"
    ],
    "env": {
      "test": {
        "plugins": [
          "dev-expression",
          "transform-object-assign",
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "include": [
      "src/slendr.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "checkCoverage": true,
    "reporter": [
      "text",
      "lcov"
    ]
  }
}
