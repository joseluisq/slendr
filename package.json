{
  "name": "slendr",
  "version": "1.0.1",
  "description": "Lightweight and responsive slider for modern browsers.",
  "repository": "joseluisq/slendr",
  "author": {
    "name": "JosÃ© Luis Quintana",
    "url": "http://git.io/joseluisq"
  },
  "license": "MIT",
  "keywords": [
    "slider",
    "slideshow",
    "html5",
    "lightweight",
    "reponsive",
    "css3",
    "translate3d",
    "commonjs",
    "hardware accelerated"
  ],
  "engines": {
    "node": ">= 4.0"
  },
  "main": "./slendr.js",
  "dependencies": {
    "css-loader": "^0.26.1",
    "emitus": "^1.1.3"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-1": "^6.16.0",
    "clean-css": "^4.0.1",
    "coveralls": "^2.11.15",
    "css-loader": "^0.26.1",
    "eslint": "^3.13.1",
    "gzip-size": "^3.0.0",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.26.0",
    "in-publish": "^2.0.0",
    "jest-cli": "^18.1.0",
    "jsdom": "^9.9.1",
    "node-sass": "4.4.0",
    "pretty-bytes": "^4.0.2",
    "readline-sync": "^1.4.5",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2"
  },
  "scripts": {
    "start": "webpack-dev-server -d --content-base ./ --hot --colors --inline src/app.js --config webpack.server.config.js",
    "build:css": "node-sass scss/slendr.scss dist/slendr.css && cleancss dist/slendr.css -do dist/slendr.min.css",
    "build:lib": "babel ./src -d . --ignore 'test.js'. --ignore 'app.js'",
    "build:umd": "webpack src/slendr.js dist/slendr.js",
    "build:min": "webpack -p src/slendr.js dist/slendr.min.js",
    "build": "node ./scripts/build.js",
    "prepublish": "node ./scripts/build.js",
    "release": "node ./scripts/release.js",
    "lint": "eslint src",
    "test": "npm run lint && jest --coverage",
    "test-watch": "npm run lint && jest --watch",
    "coverage": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-1"
    ],
    "plugins": [
      "dev-expression",
      "transform-object-assign"
    ]
  },
  "jest": {
    "verbose": true,
    "testPathIgnorePatterns": [
      "/(node_modules|src|scripts|dist)/"
    ]
  }
}
